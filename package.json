{
  "name": "leeft-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter @leeft/web dev",
    "dev:data": "pnpm --filter @leeft/data dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm -r --no-bail check",
    "check:fix": "pnpm -r check:fix",
    "deploy:web": "pnpm --filter @leeft/web build && cd apps/web && firebase deploy",
    "pipeline": "bun scripts/pipeline.ts",
    "pipeline:sync": "bun scripts/pipeline.ts --sync-only",
    "pipeline:sh": "./scripts/shell/pipeline.sh",
    "upload": "bun scripts/upload.ts",
    "upload:sh": "./scripts/shell/upload.sh",
    "knip": "knip"
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "knip": "^5.66.0",
    "typescript": "catalog:"
  }
}
